# Example Terraform variables file
# Copy this to terraform.tfvars and customize as needed

# AWS Configuration
aws_region = "us-east-1"

# Application Configuration
bucket_name = "scm-max-react-app-v2"
api_url     = "http://apollo-v2-alb-2115905239.us-east-1.elb.amazonaws.com"

# Optional Custom Domain
domain_name = ""  # Leave empty if not using custom domain

# Environment Configuration
environment  = "production"
project_name = "scm-max"

# CloudFront Configuration
price_class = "PriceClass_100"  # PriceClass_All, PriceClass_200, PriceClass_100
enable_https = true
cache_ttl    = 86400  # 24 hours in seconds

# Additional Tags
tags = {
  Owner       = "SCM-MAX Team"
  Environment = "production"
  Project     = "scm-max"
  CostCenter  = "IT"
}
